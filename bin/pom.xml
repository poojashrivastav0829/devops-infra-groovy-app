<plugin>

                <groupId>org.jacoco</groupId>

                <artifactId>jacoco-maven-plugin</artifactId>

                <version>0.8.8</version>

                <executions>

                    <execution>

                        <id>default-prepare-agent</id>

                        <goals>

                            <goal>prepare-agent</goal>

                        </goals>

                    </execution>

                    <execution>

                        <id>default-report</id>

                        <goals>

                            <goal>report</goal>

                        </goals>

                    </execution>

                    <execution>

                        <id>default-check</id>

                        <goals>

                            <goal>check</goal>

                        </goals>

                        <configuration>

                            <rules>

                                <rule>

                                    <element>BUNDLE</element>

                                    <limits>

                                        <limit>

                                            <counter>COMPLEXITY</counter>

                                            <value>COVEREDRATIO</value>

                                            <minimum>0.0</minimum>

                                        </limit>

                                    </limits>

                                </rule>

                            </rules>

                        </configuration>

                    </execution>

                </executions>

                <configuration>

                    <excludes>

                        <exclude>com/eldisol/jacoboot/JacobootApplication.class</exclude>

                    </excludes>

                </configuration>

            </plugin>
			
			
			
			
			
		</plugins>
	</build>

